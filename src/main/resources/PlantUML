@startuml
entity Recipe {
    id Long
    user_id Long
    name String,
    cuisine Cuisine,
    category Category,
    prepTimeInMin Integer,
    cookTimeInMin Integer,
    servings Integer,
    directions String,
    difficulty Difficulty,
}
entity User {
  id Long
  firstName String
  lastName String
  userName String
  email String
}

entity Comment{
  id Long
  recipe_id Long
  text String
  authorName String
}

entity Ingredient {
  id Long
  recipe_id Long
  quantity Integer
  unitOfMeasure String
}


enum Difficulty {
  EASY, MODERATE, HARD
}

enum Category {
MAIN DISHES, SIDE DISHES, BREAKFAST, SOUPS, SALADS,
APPETIZERS, BEVERAGES,
BREADS, ROLLS, DESSERTS
}

enum Cuisine {
AMERICAN, ARMENIAN, ITALIAN,
CHINESE, MEXICAN,
INDIAN, JAPANESE, FRENCH,
THAI, MEDITERRANEAN

}

Recipe "*" <--> "1" User
Recipe "1" <--> "*" Ingredient
Recipe "1" <--> "*" Comment
Recipe ---> Cuisine
Recipe ---> Difficulty
Recipe ---> Category

@enduml